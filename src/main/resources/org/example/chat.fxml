<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controlador.ChatController" spacing="10" alignment="CENTER">
    <Label text="Chat"/>
    <ListView fx:id="usuariosList"/>
    <TextArea fx:id="mensajesArea" editable="false"/>
    <TextField fx:id="mensajeField" promptText="Escribe un mensaje"/>
    <Button text="Enviar" onAction="#enviarMensaje"/>
</VBox>
