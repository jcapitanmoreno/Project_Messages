<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.View.ChatController">
    <Label text="Chat" />
    <ListView fx:id="usuariosList" prefHeight="207.0" prefWidth="170.0" />
    <TextArea fx:id="mensajesArea" editable="false" prefHeight="456.0" prefWidth="478.0" />
    <TextField fx:id="mensajeField" promptText="Escribe un mensaje" />
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#volverAlLogin" text="Atras" translateX="-140.0" />
        <Button onAction="#enviarMensaje" text="Enviar" />
        <Button onAction="#exportarConversacion" text="Exportar " translateX="140.0" />
    </HBox>

</VBox>
