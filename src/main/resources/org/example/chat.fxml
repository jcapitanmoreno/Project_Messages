<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: #808080; -fx-border-color: #009899;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.View.ChatController">
    <Label text="Chat" textFill="WHITE" />
    <ListView fx:id="usuariosList" prefHeight="207.0" prefWidth="409.0" style="-fx-border-color: #009899;" />
    <TextArea fx:id="mensajesArea" editable="false" prefHeight="456.0" prefWidth="478.0" style="-fx-border-color: #009899;" />
    <TextField fx:id="mensajeField" prefHeight="25.0" prefWidth="240.0" promptText="Escribe un mensaje" style="-fx-border-color: #808080; -fx-background-color: #009899;" />
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#volverAlLogin" style="-fx-background-color: #009899;" text="Atras" textFill="WHITE" translateX="-100.0" />
        <Button onAction="#enviarMensaje" style="-fx-background-color: #009899;" text="Enviar" textFill="WHITE" translateX="260.0" />
        <Button fx:id="analizarButton" onAction="#mostrarAnalisis" style="-fx-background-color: #009899;" text="Analizador" textFill="WHITE" />
        <Button onAction="#exportarConversacion" style="-fx-background-color: #009899;" text="Exportar " textFill="WHITE" translateX="-150.0" />
    </HBox>

</VBox>
